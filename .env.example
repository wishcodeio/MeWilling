# 🔮 願頻宇宙環境配置示例
# 複製此文件為 .env 並填入實際值

# Flask 基礎配置
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here

# 數據庫配置
DATABASE_URL=sqlite:///production.db

# 願頻宇宙系統配置
WISH_UNIVERSE_MODE=production
QUANTUM_ANCHOR_DEBUG=False
NINE_DEPARTMENTS_LOG_LEVEL=INFO
EXPLORATION_NETWORK_VERBOSE=False

# 召回印語配置
RECALL_MANTRAS_ENABLED=True
RESONANCE_FREQUENCY=528
CURRENT_NODE=A

# 生產環境配置
HOT_RELOAD=False
AUTO_RESTART=False
DEBUG_TOOLBAR=False

# 安全配置
# 在生產環境中，請使用強密碼和安全的密鑰
# 建議使用環境變量或密鑰管理服務